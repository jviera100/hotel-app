<!-- Registro.hbs -->
<div class="py-4">
    <h2>Check in</h2>
    <hr class="w-50" />

    <form action="/registro" method="POST" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto" name="email" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Name</label>
                <input class="form-control m-auto" name="username" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input class="form-control m-auto" type="password" name="password" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repit password</label>
                <input class="form-control m-auto" type="password" />
            </div>            
            <div class="form-group col-12 col-sm-6">
                <label>Type of User</label>
                <select class="form-control m-auto" name="tipo_usuario">
                    <option value="customer">Customer</option>
                    <option value="administrator">Administrator</option>
                </select>
            </div>           
            <div class="form-group col-12 col-sm-12">
                <label>Photo of profile</label>
                <input type="file" name="foto" />
            </div>
        </div>
        <button class="btn btn-info mb-3">Check in</button>
        <p><a href="/login"> Log in</a></p>
    </form>
</div>

